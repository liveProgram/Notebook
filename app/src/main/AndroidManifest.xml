<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.live.programming.an15_notebook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon_set"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_set_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AN15_Notebook">
        <activity
            android:name=".users.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".users.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".DetailsActivity"
            android:exported="true" />
        <activity
            android:name=".DisplayActivity"
            android:exported="true" />
        <activity
            android:name=".AddNoteActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>